@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-page d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-sm border-0 rounded-4 overflow-hidden" style="max-width: 950px; width: 100%;">
        <div class="row g-0">

         
            <div class="col-md-6 p-5 bg-white">
                <h2 class="fw-bold mb-3 text-uppercase text-dark">Welcome Back</h2>
                <p class="text-muted mb-4">Log in to continue your reading journey 📖</p>

                <form id="loginForm" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control rounded-3" autocomplete="current-password" placeholder="Password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                 
                    <button id="loginSubmit" type="submit"
                            class="btn w-100 py-2 fw-bold rounded-3 text-white"
                            style="background: linear-gradient(135deg, #5a9a9c, #417678); border:none;">
                        Log in 🚀
                    </button>

                   
                    <div class="mt-4 text-center">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="d-block fw-semibold link-custom">Forgot your password?</a>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="d-block fw-semibold link-custom">Resend confirmation email</a>
                        <a href="/Identity/Account/Register" class="d-block fw-semibold link-custom">Don’t have an account? Register</a>
                    </div>
                </form>
            </div>

          
            <div class="col-md-6 d-flex flex-column justify-content-center align-items-center text-center text-white p-5"
                 style="background: linear-gradient(135deg, #2c2c2c, #4d4d4d);">
                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png"
                     class="img-fluid mb-4" style="max-height: 180px;" alt="User">

             
                <h3 class="fw-bold" style="color:#5a9a9c;">New Here?</h3>
                <p class="mb-4 text-light">Don't have an account yet? Join our community 🚀</p>

               
                <a href="/Identity/Account/Register"
                   class="btn fw-bold w-75 rounded-3 text-white"
                   style="background: linear-gradient(135deg, #5a9a9c, #417678); border:none;">
                    Register
                </a>
              
                <hr class="my-4" />
             
                    <p class="text-center mb-3 ">Or register using:</p>

                    <div class="row g-3">

                        <div class="col-12 col-md-6">
                            <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="w-100">
                                <button type="submit"
                                        class="btn w-100 py-2 fw-bold rounded-3 d-flex align-items-center justify-content-center shadow-sm"
                                        style="background: #ffffff; border:1px solid #ddd; color:#444;"
                                        name="provider" value="Google">
                                    <img src="https://www.svgrepo.com/show/355037/google.svg"
                                         alt="Google" width="20" height="20" class="me-2" />
                                    <span>Google</span>
                                </button>
                            </form>
                        </div>

                      
                        <div class="col-12 col-md-6">
                            <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="w-100">
                                <button type="submit"
                                        class="btn w-100 py-2 fw-bold rounded-3 d-flex align-items-center justify-content-center shadow-sm"
                                        style="background: #1877f2; border:none; color:white;"
                                        name="provider" value="Facebook">
                                    <i class="fab fa-facebook-f me-2 fs-5"></i>
                                    <span>Facebook</span>
                                </button>
                            </form>
                        </div>
                    </div>


               
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .link-custom {
        color: #5a9a9c;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .link-custom:hover {
            color: #417678;
            text-decoration: underline;
        }
</style>
