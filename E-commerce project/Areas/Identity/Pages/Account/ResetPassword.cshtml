@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-white">
    <div class="card shadow-lg border-0 rounded-4 p-5" style="max-width: 450px; width: 100%;">

        <h2 class="fw-bold text-center mb-3 text-dark">Reset Password</h2>
        <p class="text-muted text-center mb-4">
            Enter your email and choose a new password 🔐
        </p>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />

            <div class="form-floating mb-4">
                <input asp-for="Input.Email"
                       class="form-control rounded-3"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.Password"
                       class="form-control rounded-3"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Enter your new password" />
                <label asp-for="Input.Password">New Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword"
                       class="form-control rounded-3"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Confirm your new password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit"
                    class="btn w-100 py-3 fw-bold rounded-3 text-white"
                    style="background: linear-gradient(135deg, #5a9a9c, #417678); border:none;">
                Reset Password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
