@model int

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-4 p-5 text-center" style="max-width: 700px;">

        
        <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
        </div>

        
        <h1 class="fw-bold text-success mb-3">Order Placed Successfully!</h1>
        <p class="lead text-muted mb-4">
            Thank you for your purchase 🎉 <br />
            Your order has been confirmed and is now being processed.
        </p>

        <div class="alert alert-primary rounded-3 fw-bold fs-5">
            📦 Your Order Number is : <span class="text-dark">@Model</span>
        </div>


        <div class="my-4">
            <img src="~/Images/lawn_leaf.jpg" class="img-fluid rounded-3 shadow-sm" style="max-height: 300px;" />
        </div>


        <p class="text-muted fs-6">
            You will receive a confirmation email with the order details shortly.
        </p>

        
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark px-4">
                <i class="bi bi-house-door"></i> Continue Shopping
            </a>
            <a asp-area="admin" asp-controller="Order" asp-action="Details" asp-route-id="@Model" class="btn btn-success px-4">
                <i class="bi bi-card-list"></i> View Order Details
            </a>
        </div>

    </div>
</div>
