@{
    ViewData["Title"] = "Home Page";
}
@model List<Product>

<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card border-0 shadow-sm rounded-3 h-100 product-card">
                <div class="overflow-hidden rounded-top">
                    @if(item.ProductImages!=null && item.ProductImages.Count>0){
					 <img src="@item.ProductImages[0].ImageURL" class="card-img-top img-fluid product-img" alt="@item.title" />
                    }
                </div>
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title text-dark fw-bold text-uppercase">@item.title</h5>
                    <p class="text-muted mb-1">by <span class="fw-semibold">@item.Author</span></p>

                    <p class="mb-0 text-secondary">
                        List Price:
                        <span class="text-decoration-line-through">@item.ListPrice.ToString("c")</span>
                    </p>
                    <p class="fw-bold text-success mb-3">
                        As low as: @item.price100.ToString("c")
                    </p>

                    <a asp-action="Details"
                       asp-route-id="@item.Id"
                       class="btn btn-outline-dark fw-semibold mt-auto">
                        View Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .product-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }
    .product-img {
        transition: transform 0.3s ease;
    }
    .product-card:hover .product-img {
        transform: scale(1.05);
    }
</style>
