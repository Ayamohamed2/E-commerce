    @using System.Security.Claims;
    @model FeedbackVM
@{
    ViewData["Title"] = "Feedback";

}

<div class="container py-5">
    <div class="row">
       
        <div class="col-md-4 text-center mb-4">
            <img src="@Model.product.ProductImages.FirstOrDefault().ImageURL " class="img-fluid rounded shadow-sm" />
            <h3 class="mt-3">@Model.product.title</h3>
            <span class="badge bg-warning text-dark">@Model.product.Category?.Name</span>
            <div class="mt-2">
                <span class="fs-5 fw-bold">@Model.AverageRating.ToString("0.0") / 5</span>
                <span class="text-warning">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Math.Round(Model.AverageRating))
                        {
                            <i class="bi bi-star-fill"></i>
                        }
                        else
                        {
                            <i class="bi bi-star"></i>
                        }
                    }
                </span>
            </div>
     
        </div>

        <div class="col-md-8">  
            <button type="button" class="btn btn-secondary mb-3" onclick="history.back()">Back</button>
            <h4 class="fw-bold mb-3">User Feedback</h4>

    
            @if (User.Identity.IsAuthenticated)
            {
                <form  method="post" class="mb-4" id="feedbackForm" asp-area="Customer" asp-action="feedback" asp-controller="feedback" asp-route-id="@Model.product.Id">
                    
                    
                    <input type="hidden" name="Rating" id="RatingInput" value="0" />
                    <input type="hidden" name="Product_Id" value="@Model.NewFeedback.Product_Id" />
                    <div class="mb-2">
    <textarea name="Comment" class="form-control" placeholder="Write your comment..." rows="3" asp-for="@Model.NewFeedback.Comment"></textarea>
                        <span asp-validation-for="@Model.NewFeedback.Comment" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <label class="mb-1">Rating:</label>
                        <div id="starContainer" class="text-warning" style="font-size: 1.5rem; cursor:pointer;">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="bi bi-star" data-value="@i"></i>
                            }
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <button type="submit" class="btn btn-success mt-2">Submit Feedback</button>
                </form>
            }
            else
            {
                <p class="text-muted">You need to <a href="/Identity/Account/Login">login</a> to leave a feedback.</p>
            }

    
            @foreach (var fb in Model.Feedbacks)
            {
                <div class="card mb-3 shadow-sm p-3">
                    <div class="d-flex align-items-center mb-2">
                        <img src="@fb.Profile_image" class="rounded-circle me-2" width="40" height="40" />
                        <div>
                            <strong>@fb.UserName</strong>
                            <div class="text-warning">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= fb.Rating)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                }
                            </div>
                        </div>
                        <small class="text-muted ms-auto">@fb.CreatedAt.ToString("MMM dd, yyyy")</small>
                    </div>
                    <p class="mb-0">@fb.Comment</p>
                    @if (User.Identity.IsAuthenticated && User.FindFirstValue(ClaimTypes.NameIdentifier) == fb.User_Id)
                    {
                        <div class="mt-2">
                       
                            <form method="post" asp-action="Delete" asp-controller="Feedback" asp-area="Customer" style="display:inline;">
                                <input type="hidden" name="id" value="@fb.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>

                            
                          
                        </div>
                    }

                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
    
        const stars = document.querySelectorAll("#starContainer i");
        const ratingInput = document.getElementById("RatingInput");
        let selectedRating = 0;

        stars.forEach(star => {
            star.addEventListener("mouseover", function () {
                highlightStars(parseInt(this.getAttribute("data-value")));
            });
            star.addEventListener("mouseout", function () {
                highlightStars(selectedRating);
            });
            star.addEventListener("click", function () {
                selectedRating = parseInt(this.getAttribute("data-value"));
                ratingInput.value = selectedRating;
                highlightStars(selectedRating);
            });
        });

        function highlightStars(rating) {
            stars.forEach(star => {
                const val = parseInt(star.getAttribute("data-value"));
                if (val <= rating) {
                    star.classList.remove("bi-star");
                    star.classList.add("bi-star-fill");
                } else {
                    star.classList.remove("bi-star-fill");
                    star.classList.add("bi-star");
                }
            });
        }
    </script>
}

<style>
    textarea {
        resize: none;
    }

    .card {
        border-radius: 1rem;
    }

    .bi-star, .bi-star-fill {
        font-size: 1.2rem;
        transition: transform 0.2s;
    }

    #starContainer i:hover {
        transform: scale(1.2);
    }
</style>
