@using System.Text.RegularExpressions

@{
    SelectList category = new SelectList(ViewBag.categories, "Id", "Name");
}
@model Product
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="delete" asp-controller="product" class="row">
            <div class="border p-3">

                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="title" class="form-control border-0 shadow" />
                    <label class="ms-2">Title</label>
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <label class="ms-2">Description</label>
                    <p class="form-control border-0 shadow bg-secondary bg-light" style="min-height:100px;">
                        @Regex.Replace(Model.Discription ?? "", "<.*?>", String.Empty)
                    </p>
                </div>
                
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="ISBN" class="form-control border-0 shadow" />
                    <label class="ms-2">ISBN</label>
                </div>


                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="Author" class="form-control border-0 shadow" />
                    <label class="ms-2">Author</label>
                </div>


                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="ListPrice" class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="ListPrice"></label>
                </div>


                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="price" class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="price"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="price50" class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="price50"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="price100" class="form-control border-0 shadow" />
                    <label class="ms-2" asp-for="price100"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <select disabled asp-for="Category_id" asp-items="category" class="form-select  border-0 shadow">
                        <option>--Select Category--</option>
                    </select>
                    <label class="ms-2">Category</label>
                    <span asp-validation-for="Category_id" class="text-danger"></span>
                </div>
                <div class="pt-2 row">
                    <div class="col-6 ">
                        <button class="btn btn-danger form-control" type="submit">Delete</button>
                    </div>

                    <div class="col-6 ">
                        <a class=" btn btn-outline-secondary form-control" asp-action="index">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
